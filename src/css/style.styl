@import 'mixins'


html, body
  height:100%
  
.App
  background: lightgrey
  margin: 0

.SongManager
  display:flex
  padding-top: 20px
  flex-direction: row
  justify-content: center
  flex: 1 1 auto
  background-color: darkgrey
hr
  height: 1px
  padding:0
  margin: 0.75em 0 

.musicTemplate
  background-color: cyan
  display: flex
  justify-content: center
  flex-direction: column
  padding-top: 20px
  padding-bottom: 20px
  text-align: center
  flex:0 0 500px
  width: 500px



.chevron::before {
  border-style: solid;
  border-width: 0.25em 0.25em 0 0;
  content: "";
  display: inline-block;
  height: 1.5em;
  left: 0.15em;
  //position: relative;
  top: 0.15em;
  transform: rotate(-45deg);
  vertical-align: top;
  width: 1.5em;
  //flex-basis: 10%
}


.chevron.right:before {
  //left: 60px;
  transform: rotate(45deg);
}

.chevron.bottom:before {
  top: 0;
  transform: rotate(135deg);
}

.chevron.left:before {
  left: -60px;
  transform: rotate(-135deg);
}

.left
  padding-right: 1vw
  left: -300px

.right
  padding-left: 1vw
  right: -300px

.chevron
  padding-top: 15vh
  &:hover
    color: #0B51CB
    cursor: pointer

.btn
  border: none 
  background: none
  padding: 0
  position: relative
  top: 100px


.noteBtn-0
  note-Btn()
  right: 90px


.noteBtn-1
  note-Btn()
  right: 50px
 

.noteBtn-2
  note-Btn()
  right: 10px

.noteBtn-3
  note-Btn()
  right: -30px

.noteBtn-4
  note-Btn()
  right: -70px

.noteBtn-5
  note-Btn()
  right: -110px

.firstline
  bottom: 10px


.noteContainer
  position: absolute

